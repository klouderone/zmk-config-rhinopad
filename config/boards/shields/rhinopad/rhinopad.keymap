    keymap {

        compatible = "zmk,keymap";

        default_layer {

    /*
    * ,----------------------------------.                      
    * | ESC  | TAB  | td1  | td2  | DEL  |                      
    * `------+------+------+------+------`                      
    *        | CTRL | td4  | td5  |                           
    * ,------+------+------+------+------,  
    * | SHFT | td3  | td6  |  L2  |  L3  |  
    * `----------------------------------'  
    */                                        

             bindings = <   

             &kp ESC         &kp TAB              &td1            &td2             &kp DEL
                             &kp LCTRL            &td4            &td5                                    
             &kp LSHIFT      &td3                 &td6            &mo 1            &tog 2 
             >; 
             
                sensor-bindings = <&rot_kp LC(Z) LC(Y)>;

        };

    layer_two {

    /*
    * ,----------------------------------.                      
    * | ESC  | td7  | td8  | td9  | td10 |                      
    * `------+------+------+------+------`                      
    *        | td11 | td12 | td13 |                           
    * ,------+------+------+------+------,  
    * | td14 | td15 | td16 |  L2  | td17 |  
    * `----------------------------------'          
    */                                        

             bindings = <   

             &kp ESC       &td7          &td8            &td9            &td16
                           &td10         &td11           &td12                                    
             &td13         &td14         &td15           &none           &bootloader
             >;

        sensor-bindings = <&rot_kp>;

        };

        
    layer_numpad {

    /*
    * ,----------------------------------.                      
    * |   0  |   1  |   2  |   3  | BSPC |                      
    * `------+------+------+------+------`                      
    *        |   4  |   5  |   6  |                           
    * ,------+------+------+------+------,  
    * |  .   |   7  |   8  |   9  |  L3  |  
    * `----------------------------------'        
    */                                        

    bindings = <   

        &kp N0       &kp N1        &kp N2        &kp N3       &kp BSPC
                     &kp N4        &kp N5        &kp N6                                   
        &kp DOT      &kp N7        &kp N8        &kp N9       &tog NUMPAD
        >;

        sensor-bindings = <&rot_kp LC(Z) LC(Y)>;

    };
